mixin location(location, question, altitude)
  .dataCard.text-center
    #map(data-lat=location.latitude data-lon=location.longitude)
    .dataHeader
      a(href=`https://foursquare.com/v/${question.locationResponse.foursquareVenueId}` target="_blank")
        h3.thinner= question.locationResponse.text || location.placemark.name
      p #{location.placemark.locality}, #{location.placemark.administrativeArea}
    .dataBody
      .row.light-line
        .col-xs-4
          h3.thinner #{(location.altitude).toFixed()}â€™
          small Altitude
        .col-xs-4
          h3.thinner #{altitude.floorsAscended}
          small Floors Up
        .col-xs-4
          h3.thinner #{altitude.floorsDescended}
          small Floors Down
