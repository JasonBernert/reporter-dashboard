doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='csrf-token', content=_csrf)
    title #{title}
    link(rel='shortcut icon', href='/favicon.png')
    link(rel='stylesheet', href='/css/main.css')
    link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Roboto+Mono|Roboto:300,400')

  body
  
  .container
    include partials/flash
    
  block content
    .full-gradient-background
      .login-container 
        .login-form 
          .lock-icon
            != h.icon('lock')
          form(method='POST')
            .form-group
              input(type='hidden', name='_csrf', value=_csrf)
            .form-group
              input.form-control(type='email', name='email', id='email', placeholder='Email', autofocus, required)
            .form-group
              input.form-control(type='password', name='password', id='password', placeholder='Password', required)
            button.btn.btn-default(type='submit') Login
                //- a.btn.btn-link(href='/forgot') Forgot your password?

    script(src='/js/lib/jquery-3.1.1.min.js')
    script(src='/js/lib/bootstrap.min.js')
    script(src='/js/main.js')
